---
summary: Sanity test plan

discover:
  how: fmf
  filter: tag:-integration

environment:
  IMAGE_TAG: latest

provision:
  how: container
  image: quay.io/testing-farm/cli:${IMAGE_TAG}

prepare:
  - name: packages
    how: install
    package:
      - git
      - netcat-openbsd
      - jq

adjust:
  prepare:
    how: install
    package:
      - git
      - netcat
      - jq
  when: distro = fedora

execute:
  how: tmt
