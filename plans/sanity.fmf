---
summary: Sanity test plan

discover:
  how: fmf

environment:
  IMAGE_TAG: latest

provision:
  how: container
  image: quay.io/testing-farm/cli:${IMAGE_TAG}

prepare:
  - name: packages
    how: install
    package:
      - git
      - netcat
      - jq

adjust:
  prepare:
    how: shell
    script: apk add jq netcat-openbsd
  when: distro = alpine

execute:
  how: tmt
